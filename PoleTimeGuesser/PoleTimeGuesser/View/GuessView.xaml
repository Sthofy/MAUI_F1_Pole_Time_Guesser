<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoleTimeGuesser.View.GuessView"
             xmlns:viewModel="clr-namespace:PoleTimeGuesser.ViewModel"
             x:DataType="viewModel:GuessViewModel"
             xmlns:model="clr-namespace:PoleTimeGuesser.Model"
             Title="GuessView"
             Shell.NavBarIsVisible="True">
    <Grid Margin="20">
        <VerticalStackLayout>
            <Frame BackgroundColor="IndianRed">
                <Label Text="{Binding GameRules}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>