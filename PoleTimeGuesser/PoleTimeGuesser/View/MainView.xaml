<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoleTimeGuesser.View.MainView"
             xmlns:model="clr-namespace:PoleTimeGuesser.Model"
             xmlns:viewModel="clr-namespace:PoleTimeGuesser.ViewModel"
             Title="{Binding SharedData.Username}"
             Background="#13232f">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings"
                     IconImageSource="settings.png"
                     Command="{Binding GoToSettingsPageCommand}"/>
    </ContentPage.ToolbarItems>

    <Grid Padding="10">
        <ScrollView>
            <Grid>
                <VerticalStackLayout>
                    <Frame Style="{StaticResource CardView}"
                               Margin="5"
                               HeightRequest="200">
                        <Grid ColumnDefinitions="150,*"
                                  RowDefinitions="150,*">
                            <Frame WidthRequest="128"
                                       HeightRequest="128"
                                       CornerRadius="64"
                                       BorderColor="Transparent"
                                       BackgroundColor="Aqua">
                                <Image WidthRequest="128"
                                           HeightRequest="128"
                                           Source="{Binding SharedData.AvatarSourceName}"
                                           Aspect="AspectFill"/>
                            </Frame>
                            <Label Grid.Row="1"
                                       Text="{Binding SharedData.Username}"
                                       HorizontalOptions="Center"
                                       FontSize="30"/>

                        </Grid>
                    </Frame>

                    <Frame Style="{StaticResource CardView}"
                               Margin="5"
                               HeightRequest="300">

                        <Label Text="Felhasználók Score board"/>

                    </Frame>

                    <Frame Style="{StaticResource CardView}"
                               Margin="5"
                               HeightRequest="100"
                               Padding="5"
                               BackgroundColor="IndianRed"
                               BorderColor="Transparent">

                        <Grid RowDefinitions="auto,*"
                                  RowSpacing="5">
                            <Label Text="Upcoming Event"
                                       HorizontalTextAlignment="Center"
                                       Style="{StaticResource MediumLabel}"/>
                            <Grid Grid.Row="1"
                                      ColumnDefinitions="65,2*,*"
                                      ColumnSpacing="10">
                                <Frame HeightRequest="64"
                                           WidthRequest="64"
                                           CornerRadius="32"
                                           BorderColor="Transparent">
                                    <Image Source="{Binding UpcomingEvent.Circuit.Location.Image}"
                                               WidthRequest="100"
                                               HeightRequest="100"
                                               Aspect="AspectFill"/>
                                </Frame>
                                <VerticalStackLayout Grid.Column="1"
                                                         VerticalOptions="Center">
                                    <Label Text="{Binding UpcomingEvent.Circuit.Location.Country}"
                                               Style="{StaticResource MediumLabel}"/>
                                    <Label Text="{Binding UpcomingEvent.Circuit.Location.Locality}"
                                               Style="{StaticResource SmallLabel}"/>
                                    <Label Text="{Binding UpcomingEvent.Circuit.CircuitName}"
                                               Style="{StaticResource SmallLabel}"/>
                                </VerticalStackLayout>
                                <Label Text="{Binding UpcomingEvent.Date}"
                                           Grid.Column="2"
                                           VerticalTextAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Frame>

                    <ScrollView Orientation="Horizontal"
                                    HorizontalScrollBarVisibility="Never">
                        <HorizontalStackLayout BindableLayout.ItemsSource="{Binding TopDrivers}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="model:DriverStandingsModel">
                                    <Frame Style="{StaticResource CardView}"
                                               Margin="5"
                                               WidthRequest="350"
                                               HeightRequest="80">
                                        <Grid ColumnDefinitions="20,60,3*,2*"
                                                  ColumnSpacing="10">
                                            <Label Text="{Binding position}"
                                                       Style="{StaticResource LargeLabel}"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="Center"/>
                                            <Frame CornerRadius="30"
                                                       WidthRequest="60"
                                                       HeightRequest="60"
                                                       Grid.Column="1">
                                                <Image Source="{Binding Driver.Image.Front}"
                                                           HeightRequest="60"
                                                           WidthRequest="60"
                                                           Aspect="AspectFill"/>
                                            </Frame>

                                            <VerticalStackLayout VerticalOptions="Center"
                                                                     Grid.Column="2">
                                                <HorizontalStackLayout Spacing="5">
                                                    <Label Text="{Binding Driver.givenName}"
                                                               Style="{StaticResource MediumLabel}"/>
                                                    <Label Text="{Binding Driver.familyName}"
                                                               Style="{StaticResource MediumLabel}"/>
                                                </HorizontalStackLayout>

                                                <Label Text="{Binding Constructors[0].name}"
                                                           Style="{StaticResource SmallLabel}"/>

                                            </VerticalStackLayout>

                                            <HorizontalStackLayout VerticalOptions="Center"
                                                                       HorizontalOptions="Center"
                                                                       Spacing="5"
                                                                       Grid.Column="3">
                                                <Label Text="{Binding points}"
                                                           Style="{StaticResource MediumLabel}"/>
                                                <Label Text="Pts"
                                                           Style="{StaticResource MediumLabel}"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </HorizontalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"/>
    </Grid>
</ContentPage>
