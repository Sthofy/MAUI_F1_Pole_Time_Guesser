<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoleTimeGuesser.View.CircuitDetailsView"
             xmlns:model="clr-namespace:PoleTimeGuesser.Model"
             xmlns:viewmodel="clr-namespace:PoleTimeGuesser.ViewModel"
             x:DataType="viewmodel:CircuitDetailsViewModel"
             BindingContext="{Binding CircuitDetailsView, Source={StaticResource ViewModelLocator}}"
             Title="{Binding Title}">

    <Grid RowDefinitions="100,*">
        <VerticalStackLayout Spacing="5">
            <Grid ColumnDefinitions="*,*">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="{Binding Circuit.Circuit.Location.Country}"
                           Style="{StaticResource MediumLabel}"/>
                    <Label Text="{Binding Circuit.Circuit.Location.Locality}"
                           Style="{StaticResource MediumLabel}"/>
                </VerticalStackLayout>

                <Image Grid.Column="1"
                       Source="{Binding Circuit.Circuit.Location.Image}"/>

            </Grid>
            <Label Text="{Binding Circuit.Circuit.CircuitName}"
                   Style="{StaticResource LargeLabel}"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1">
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>