<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PoleTimeGuesser.View.CircuitPopup"
             xmlns:model="clr-namespace:PoleTimeGuesser.Model"
             xmlns:viewmodel="clr-namespace:PoleTimeGuesser.ViewModel"
             x:DataType="viewmodel:ScheduleViewModel"
             BindingContext="{Binding ScheduleView, Source={StaticResource ViewModelLocator}}">

    <CollectionView ItemsSource="{Binding scheduleModels}"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:ScheduleModel">
                <Grid Padding="5">
                    <Image Source="{Binding Circuit.Image}"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</toolkit:Popup>